<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guideImgOne"
        android:background="@drawable/guide_one"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="刘翔"
        android:textSize="30dp"
        android:id="@+id/personPop"
        android:background="@drawable/point_pop"
        android:layout_above="@+id/agePop"
        android:layout_toRightOf="@+id/sexPop"
        android:layout_toEndOf="@+id/sexPop" />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="男"
        android:textSize="30dp"
        android:id="@+id/sexPop"
        android:background="@drawable/point_pop"
        android:layout_marginTop="57dp"
        android:layout_alignTop="@+id/agePop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="23"
        android:textSize="30dp"
        android:id="@+id/agePop"
        android:background="@drawable/point_pop"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="192dp" />
</RelativeLayout>